<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="/css/normalize.css">
  <link rel="stylesheet" href="/css/application.css">
  <link rel="stylesheet" href="/css/base.css">

  <!-- Libraries and APIs -->
  <script src="http://maps.googleapis.com/maps/api/js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script type="text/javascript" src="http://beneposto.pl/jqueryrotate/js/jQueryRotateCompressed.js"></script>
  <script src="https://d3js.org/d3.v3.min.js"></script>

  <!-- JavaScript Files -->
  <script src="/js/application.js"></script>
  <script src="/js/graphs.js"></script>
  <script type="text/javascript" src="/js/rotate.js"></script>
  <script type="text/javascript" src="/js/maps.js"></script>

  <title>GWD</title>
</head>
<body id="layout">
  <div id="header">
    <ul>
    <li><a href="/">Home</a></li>

    <!-- if a user is logged in then give option to log out -->

        <% if current_user %>
          <li><a href="/sessions/<%= current_user.id %>">Log out</a></li>
          <li><%= "Welcome #{current_user.first_name} #{current_user.last_name}" %></li>
        <% else  %>

        <li><a href="/users/new">Register</a></li>
        
          <% if @errors %>
            <% @errors.each do |error_msg| %>
              <%= error_msg %>
            <% end %>
          <% end %>

        <div id="login">
          <li><a id="login_link" href="/sessions">Log in</a></li>
        </div>

        <% end %>
      </ul>
  </div>

  <div id="main">
    <div id="title">
      <h1>Geothermal Well Display</h1>
    </div>

    <div id="graphic_container">
      <section id="chart">
        <!-- <h2>D3 Graphic</h2> -->
      </section>
    </div>


    <%= yield %>
  </div>
</body>


</html>
