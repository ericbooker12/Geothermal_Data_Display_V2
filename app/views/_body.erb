<div id="main_page">
	<% if current_user %>
		<div id="links">
			<a id="wells" href="/wells">Wells</a>
			<a href="/rigs/index">Rigs</a>
			<a href="/pics">Photergrafs</a>
		</div>
		<div id="map">
			<%= erb :_map %>
		</div>
	<% else  %>
		<% if @errors %>
			<% @errors.each do |error_msg| %>
	        	<%= error_msg %>
	      	<% end %>
		<% end %>
		<ul>
			<li>You must be logged in to view data</li>
			<li><a href="/pics">... but here are some pictures to look at.</a></li>
		</ul>
	<% end %>
</div>